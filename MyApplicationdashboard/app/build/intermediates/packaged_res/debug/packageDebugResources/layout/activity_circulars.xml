<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CircularsActivity">
    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Courses"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleCentered="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Circular Title -->
            <TextView
                android:id="@+id/tvCircularTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Circulars"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0288D1"
                android:layout_marginBottom="16dp" />

            <!-- Circular Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:backgroundTint="#03A9F4"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCircularHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Holiday Notice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvCircularDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: April 10, 2025"
                        android:textColor="#E1F5FE"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvCircularDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College will remain closed on April 14th due to Ambedkar Jayanti."
                        android:textColor="#E1F5FE"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>