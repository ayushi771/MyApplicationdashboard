<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplicationdashboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="35" />

    <permission
        android:name="com.example.myapplicationdashboard.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.myapplicationdashboard.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/img"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MyApplicationDashboard" >

        <!-- Launcher activity (LoginActivity) -->
        <activity
            android:name="com.example.myapplicationdashboard.LoginActivity"
            android:exported="true"
            android:label="@string/login" > <!-- uses localized string -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name="com.example.myapplicationdashboard.RegisterActivity"
            android:exported="true"
            android:label="@string/register" />

        <!-- DashboardActivity -->
        <activity
            android:name="com.example.myapplicationdashboard.DashboardActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <!-- Other Activities (optional: add labels if shown in action bar) -->
        <activity android:name="com.example.myapplicationdashboard.CoursesActivity" />
        <activity android:name="com.example.myapplicationdashboard.AttendanceActivity" />
        <activity android:name="com.example.myapplicationdashboard.FeesActivity" />
        <activity android:name="com.example.myapplicationdashboard.AssignmentsActivity" />
        <activity android:name="com.example.myapplicationdashboard.EventsActivity" />
        <activity android:name="com.example.myapplicationdashboard.TimetableActivity" />
        <activity android:name="com.example.myapplicationdashboard.CircularsActivity" />
        <activity android:name="com.example.myapplicationdashboard.SettingsActivity" />
        <activity android:name="com.example.myapplicationdashboard.ComputerScienceActivity" />
        <activity android:name="com.example.myapplicationdashboard.MathematicsActivity" />
        <activity android:name="com.example.myapplicationdashboard.NotificationSettingsActivity" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.myapplicationdashboard.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>